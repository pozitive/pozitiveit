%header#header.sticky
  %nav.top-bar.shadow{data: {topbar: ""}}
    %ul.title-area
      %li.name
        %h1#logo
          = link_to ("POZ" + image_tag('logo_55.png') + "IVE").html_safe, root_path
      %li.toggle-topbar.menu-icon
        %a{href: "#"}
          %span MENU
    %section.top-bar-section
      %ul#navbar.right
        %li.divider
        %li= link_to t('home'), root_path
        %li.divider
        %li= link_to t('services'), services_path
        %li.divider
        %li= link_to t('works'), portfolio_path
        %li.divider
        %li= link_to t('process'), page_path(Page.find_by_permalink('our-process'))
        %li.divider
        %li= link_to t('about-us'), about_us_path
        %li.divider
        %li= link_to t('contact'), contact_us_path
        %li.divider
        %li.has-dropdown
          = link_to "LANGUAGES", locale: "en"
          %ul.dropdown
            %li= link_to "ENGLISH", "http://pozitiveit.com"
            %li= link_to "РУССКИЙ", "http://pozitive.biz"
        %li.divider
        %li.has-form.hide-for-large-only
          = link_to t('jumpproject'), new_message_path(type_website: "Startup"), class: "button alert tiny radius ", id: 'kick'
        
        = link_to "<i class='fi-power'></i>".html_safe, destroy_user_session_path, :method => :delete, class: "button tiny radius alert power" if user_signed_in?
