%header
  %nav.top-bar.shadow{data: {topbar: "", options: "is_hover: false"}}
    %ul.title-area
      %li.name
        %h1#logo
          = link_to ("POZ" + image_tag('logo.png',  width: '44') + "IVE").html_safe, root_path
      %li.toggle-topbar.menu-icon
        %a{href: "#"}
          %span Menu
    %section{class: "top-bar-section"}
      %ul{class: "right"}
        %li.divider
        %li
          %a{href: "/#{I18n.locale}/#services"}
            = t('services')
        %li.divider
        %li
          %a{href: "/#{I18n.locale}/#portfolio"}
            = t('works')
        %li.divider
        %li
          %a{href: "/#{I18n.locale}/#content"}
            = t('process')
        %li.divider
        %li
          %a{href: "/#{I18n.locale}/#team"}
            = t('team')
        %li.divider
        %li
          %a{href: "/#{I18n.locale}/#price"}
            = t('pricing')
        %li.divider
        %li
          %a{href: "/#{I18n.locale}/#contact_form"}
            = t('contact')
        %li.divider
        %li.has-dropdown
          = link_to "LANGUAGES", locale: "en"
          %ul.dropdown
            %li= link_to "ENGLISH", locale: "en"
            %li= link_to "РУССКИЙ", locale: "ru"
            %li= link_to "简体中文", locale: "zh-CN"
        %li.divider
        %li.has-form
          %a.button.tiny.success.radius.switch{ data: {action: "button-kick--project"}}= t('jumpproject')

